<form id="contact-form-main" method="post"  class="wrapper grid">
    <section id="contact-form-part" class="unit half">
        <h3>Entre em contato</h3>
        <div class="grid">
            <div class="unit half">
                <label for="input-name">Nome:</label>
                <input type="text" name="nome" value="" id="input-name" />
                <div class="error">Digite seu nome</div>
            </div>
            <div class="unit half">
                <label for="input-email">Email:</label>
                <input type="text" name="email" value="" id="input-email" />
                <div class="error">Digite seu email</div>
            </div>
            <div class="unit whole">
                <label for="input-subject">Assunto:</label>
                <input type="text" name="assunto" value="" id="input-subject" />
                <div class="error">Digite um assunto</div>
            </div>
            <div class="unit whole">
                <label for="input-message">Mensagem:</label>
                <textarea id="input-message" name="mensagem" rows="4"></textarea>
                <div class="error">Digite sua mensagem</div>
                <input type="submit" value="Enviar" />
            </div>
        </div>
    </section>
    <section class="unit half">
        <h3>Contato</h3>
        <p><strong>Tel:</strong> +55 11 9-8696-8444</p>
        <p><strong>Email:</strong> <a href="javascript:;">contato@luckycode.com.br</a></p>
        <h3>Redes Sociais</h3>
        <div class="social-icons">
            <a href="https://www.facebook.com/pages/Lucky-Code/552597521430145" target="_blank" data-tip-gravity="s" title="Facebook" class="show-tooltip"><i class="fa fa-facebook"></i></a>
            <a href="https://twitter.com/lucky_code" target="_blank" data-tip-gravity="s" title="Twitter" class="show-tooltip"><i class="fa fa-twitter"></i></a>
        </div>
    </section>
</form>
